.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
}

.post-author-date{
    margin: 10rpx 0 20rpx 5px;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.post-author{
    height: 60rpx;
    width: 60rpx;
}
.post-date{
    margin-left: 10px;
    font-size: 26rpx;
}
.post-title{
    font-size: 34rpx;
    font-weight: 600;
    margin-bottom: 10px;
    margin-left: 10px;
    color: #333; /*一般标题适合用于这个颜色*/
}
.post-image{
    width: 100%;
    height: 340rpx;
    margin-bottom: 15px;
}
.post-content{
    font-size: 28rpx;
    color: #666;/*一般内容适合用于这个颜色*/
    letter-spacing: 2rpx;/*文字间距*/
    margin-left: 20rpx;
    margin-bottom: 20rpx;
}
.post-like{
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 26rpx;
    margin-left: 20rpx;
}
.post-like-image{
    height: 32rpx;
    width: 32rpx;
    margin-right: 16rpx;
}
.post-like-font{
    margin-right: 40rpx;
}